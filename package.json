{
  "name": "cron-service-playwright-template",
  "version": "1.0.0",
  "description": "Template for cron service using playwright",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "prebuild": "tsc",
    "build": "node main.js",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.41.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "playwright": "^1.41.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
